<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/clMpesaMethod"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMpesaPayment"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clTotal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llOne"
                android:layout_width="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/faded_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"
                    android:text="TRANSACTION STATUS"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clStkPush"
            app:layout_constraintTop_toBottomOf="@+id/llOne"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imSuccess"
                android:layout_width="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/txn_success"
                android:src="@drawable/check_mark"
                app:layout_constraintBottom_toTopOf="@+id/btnDone"
                android:layout_height="70dp"/>
            <TextView
                android:id="@+id/tvSuccess"
                android:layout_width="wrap_content"
                android:text="Payment Approved"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imSuccess"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="ID : QWERTY"
                android:textColor="@color/black"
                android:paddingEnd="20dp"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSuccess"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_width="0dp"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_success"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>