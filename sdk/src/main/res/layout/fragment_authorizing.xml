<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.agrawalsuneet.dotsloader.loaders.CircularDotsLoader
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:loader_animDur="100"
        app:loader_bigCircleRadius="32dp"
        app:loader_circleRadius="6dp"
        app:loader_defaultColor="@color/purple_700"
        app:loader_firstShadowColor="@color/purple_100"
        app:loader_secondShadowColor="@color/purple_100"
        app:loader_selectedColor="@color/purple_700"
        app:loader_showRunningShadow="true" />

</androidx.constraintlayout.widget.ConstraintLayout>