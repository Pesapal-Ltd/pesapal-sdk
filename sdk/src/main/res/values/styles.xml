<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chip_style" parent="@style/Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="chip_style_custom" parent="chip_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="textEndPadding">16dp</item>
        <item name="textStartPadding">16dp</item>
<!--        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>-->
        <item name="rippleColor">@color/blue_pesapal</item>
    </style>

    <style name="button_proceed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button_active</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button_proceed.clearer">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">10sp</item>

        <item name="android:letterSpacing">0</item>
        <item name="android:background">@drawable/rounded_blue_sharper</item>
    </style>


    <style name="linear_payment_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:paddingVertical">21dp</item>
    </style>

    <style name="label_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_pesapal_light</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/arial</item>

        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>

    </style>

    <style name="et_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:inputType">text</item>
<!--        <item name="android:layout_marginTop">4dp</item>-->
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:letterSpacing">0.05</item>
<!--        <item name="android:background">@null</item>-->
        <item name="android:backgroundTint">@color/blue_pesapal_light</item>

    </style>

    <style name="layout_payment_outer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/rounded_grey</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">17dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="payment_card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>

    <style name="tv_txn_result">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:letterSpacing">0.03</item>

    </style>

    <style name="tv_txn_result.inner">
        <item name="android:layout_width">0dp</item>

    </style>

    <style name="button_result">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:letterSpacing">0.15</item>

    </style>

    <style name="tv_card_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>

    </style>

    <style name="icon_payment_method">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:src">@drawable/selector_checked</item>
    </style>


</resources>